<%- include('partials/header') %>

  <div class="jumbotron text-center">
    <div class="container">
      <i class="fas fa-key fa-6x"></i>
      <h1 class="display-3">You've Discovered My Secret!</h1>
      <p class="secret-text">My email is <%= currentLogged.email %>
      </p>
      <hr>
      <div class="note">
        <%usersWithSecrets.forEach(function(user){ %>
          <div class="inner-note">
            <h6>
              <%= user.email %>
            </h6>
            <p>
              <%= user.secrets %>
            </p>

          </div>
          <%}) %>
      </div>
      <a class="btn btn-danger btn-lg" href="/logout" role="button">Log Out</a>
      <a class="btn btn-primary btn-lg" href="/submit" role="button">Submit a Secret</a>
    </div>
  </div>

  <%- include('partials/footer') %>